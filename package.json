{
  "name": "lender-app-backend",
  "version": "0.0.0",
  "description": "Backend for application that helps lenders keep track of loans.",
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": "8.x"
  },
  "devDependencies": {
    "@types/jest": "~27.5",
    "@types/lodash": "^4.14.184",
    "@types/node": "~20",
    "@typescript-eslint/eslint-plugin": "~6.19",
    "@typescript-eslint/parser": "~6.19",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~27.6",
    "jest": "~28.1",
    "prettier": "~2.6",
    "rimraf": "~3.0",
    "ts-jest": "~28.0",
    "tsutils": "~3.21",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json && cp package.json build/src/",
    "bundle": "esbuild build/src/main.js --bundle --platform=node --outfile=dist/app.js",
    "deploy:prod": "rsync -avz -e 'ssh -p 19193' dist/app.js moneylender@money-lender.app:/home/moneylender/backend_api",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest",
    "testuserjourney": "jest src/api/userJourney.test.ts --forceExit",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "author": "Gregor Svr≈ænjak",
  "license": "Private property! :D",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.2",
    "esbuild": "0.19.12",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "fastify": "^4.25.2",
    "firebase-admin": "^11.9.1",
    "graphql": "^15.8.0",
    "graphql-http": "^1.22.0",
    "graphql-tools": "^8.3.4",
    "lodash": "^4.17.21",
    "mongoose": "^6.5.4",
    "validator": "^13.7.0"
  }
}
